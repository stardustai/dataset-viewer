{
  "name": "dataset-viewer",
  "displayName": "Dataset Viewer",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prebuild": "cd src-tauri && cargo run --bin export-bindings",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "package": "pnpm tauri build",
    "package:debug": "pnpm tauri build --debug",
    "package:windows": "pnpm tauri build --target x86_64-pc-windows-gnu",
    "package:all": "pnpm package && pnpm package:windows",
    "clean": "rm -rf dist src-tauri/target node_modules/.vite",
    "clean:build": "rm -rf src-tauri/target/release src-tauri/target/debug",
    "type-check": "tsc --noEmit",
    "format": "biome format --write . && cd src-tauri && cargo fmt",
    "format:check": "biome format . && cd src-tauri && cargo fmt --check",
    "format:frontend": "biome format --write .",
    "format:backend": "cd src-tauri && cargo fmt",
    "check": "biome check --write . && cd src-tauri && cargo fmt && cargo clippy",
    "postinstall": "echo 'âœ… Dependencies installed successfully!'",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.3.0",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@types/dat.gui": "^0.7.13",
    "@types/three": "^0.179.0",
    "dat.gui": "^0.7.9",
    "dav1d.js": "^0.1.1",
    "dompurify": "^3.2.6",
    "hyparquet": "^1.17.1",
    "i18next": "^25.3.2",
    "lucide-react": "^0.525.0",
    "mammoth": "^1.10.0",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "mp4box": "^1.4.4",
    "papaparse": "^5.5.3",
    "pptxtojson": "^1.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.6.0",
    "semver": "^7.7.2",
    "shiki": "^3.9.2",
    "three": "^0.179.1",
    "three-stdlib": "^2.36.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.0.15",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "vite": "^6.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "*.json": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "src-tauri/src/**/*.rs": [
      "rustfmt --config-path src-tauri/rustfmt.toml"
    ]
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
